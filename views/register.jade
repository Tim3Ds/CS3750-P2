extends layout

block content
    doctype html
    html
    head
        meta(charset='UTF-8')
        title Registration Form
        link(rel='stylesheet', href='/stylesheets/login.css')
    body
        link(href='http://fonts.googleapis.com/css?family=Open+Sans:700,600', rel='stylesheet', type='text/css')
        form(method='post', action='/messenger')
        .box
            h1 REGISTER
            input.email(type='email', name='email', value='user name', onfocus="field_focus(this, 'email');", onblur="field_blur_user(this);")
            input.email(type='email', name='email', value='email', onfocus="field_focus(this, 'email');", onblur="field_blur_email(this, 'email');")
            input.email(type='email', name='email', value='password', onfocus="field_focus(this, 'email');", onblur="field_blur_pass(this);")
            //- need to put this messenger page in later
            a(href='/messenger')  
            .btn Register
            // End Btn
        // End Box
        p
            a(href='/login' style='color:crimson; font-size:14px; font-weight: bold;') Sign In!
        script(src='//ajax.googleapis.com/ajax/libs/jquery/1.9.0/jquery.min.js', type='text/javascript')
        script(src='/scripts/_register.js')
