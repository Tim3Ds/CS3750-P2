extends layout

block content
    doctype html
    html
    head
        meta(charset='UTF-8')
        title Simple HTML & CSS Login Form
        link(rel='stylesheet', href='/stylesheets/login.css')
    body
        link(href='http://fonts.googleapis.com/css?family=Open+Sans:700,600', rel='stylesheet', type='text/css')
        form(method='post', action='/messenger')
        .box
            h1 LOGIN
            input.email(type='email', name='email', value='email', onfocus="field_focus(this, 'email');", onblur="field_blur(this, 'email');")
            input.email(type='password', name='email', value='email', onfocus="field_focus(this, 'email');", onblur="field_blur(this, 'email');")
            //- need to put this messenger link in later
            a(href='#', )
                .btn Sign In
            // End Btn
            a(href='/register', onclick='stop_click(event)')
                #btn2 Sign Up
            // End Btn2
        // End Box
        p
        | Forgot your password? 
        u(style='color:#f1c40f;') Click Here!
        script(src='//ajax.googleapis.com/ajax/libs/jquery/1.9.0/jquery.min.js', type='text/javascript')
        script(src='/scripts/_login.js')
