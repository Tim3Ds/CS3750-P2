extends layout

block content
    div.body
        meta(charset='UTF-8')
        title Login Form
        link(rel='stylesheet', href='/stylesheets/login.css')
        link(href='http://fonts.googleapis.com/css?family=Open+Sans:700,600', rel='stylesheet', type='text/css')
        form(method='post', action='/messenger')
        .box
            h1 LOGIN
            input.email(type='email', name='email', value='user name', onfocus="field_focus(this, 'email');", onblur="field_blur_user(this);")
            input.email(type='password', name='email', value='email', onfocus="field_focus(this, 'email');", onblur="field_blur_pass(this, 'email');")
            //- need to put this messenger link in later
            a(href='#', )
                .btn Sign In
            // End Btn
            //- links to register page
            a(href='/register')
                #btn2 Sign Up
            // End Btn2
        // End Box
        p
            a(href='/' style='color:crimson; font-size:14px; font-weight: bold;') HOME
        script(src='//ajax.googleapis.com/ajax/libs/jquery/1.9.0/jquery.min.js', type='text/javascript')
        script(src='/scripts/_login.js')
